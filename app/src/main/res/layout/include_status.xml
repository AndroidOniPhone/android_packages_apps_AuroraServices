<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_marginEnd="@dimen/margin_small"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/status_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:text="@string/system_status"
            android:textAppearance="@style/TextAppearance.Aurora.Title"
            android:textColor="?colorAccent"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/status_su"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_unavailable"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/status_su"
            android:textAppearance="@style/TextAppearance.Aurora.SubTitle"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/status_bb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_unavailable"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/status_bb"
            android:textAppearance="@style/TextAppearance.Aurora.SubTitle"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/status_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_unavailable"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/status_rm"
            android:textAppearance="@style/TextAppearance.Aurora.SubTitle"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/status_sa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_unavailable"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_normal"
            android:text="@string/status_sa"
            android:textAppearance="@style/TextAppearance.Aurora.SubTitle"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/system_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@drawable/warning_bg"
            android:fontFamily="@font/noto_sans"
            android:padding="10dp"
            android:text="@string/system_summary_err"
            android:textAppearance="@style/TextAppearance.Aurora.DialogContent"
            android:textColor="@color/colorGrey"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_convertApp"
            style="@style/Widget.Aurora.RaisedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/margin_small"
            android:enabled="false"
            android:text="@string/action_convert" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>