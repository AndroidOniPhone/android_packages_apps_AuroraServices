<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/permission_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_normal"
    android:paddingTop="@dimen/spacing_micro"
    android:paddingEnd="@dimen/spacing_normal"
    android:paddingBottom="@dimen/spacing_micro">

    <TextView
        android:id="@+id/permission_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/permission_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_name"
        android:fontFamily="@font/fira_sans"
        android:text="@string/perm_granted"
        android:textColor="@color/colorGreen" />

    <TextView
        android:id="@+id/permission_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/permission_status"
        android:fontFamily="@font/fira_sans_light"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp" />
</RelativeLayout>